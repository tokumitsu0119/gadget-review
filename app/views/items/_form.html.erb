<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% item.errors.full_items.each do |item| %>
          <li><%= item %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :item, 'アイテム' %>
  <%= f.text_field :item %>
  
  <%= f.label :content, 'レビュー' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>

